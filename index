<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flip Clock</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: white;
            font-family: Arial, sans-serif;
        }

        .clock {
            display: flex;
            gap: 10px;
        }

        .flip-card {
            width: 80px;
            height: 100px;
            background: white;
            color: rgba(255, 107, 107, 1); /* Vermelho pastel mais intenso */
            font-size: 50px;
            font-weight: 700; /* NÃºmeros mais grossos */
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 10px;
            border: 2px solid rgba(255, 182, 193, 0.8); /* Borda rosa clarinha */
            position: relative;
            overflow: hidden;
        }

        .flip-card::before, .flip-card::after {
            content: '';
            position: absolute;
            width: 100%;
            height: 50%;
            background: rgba(255, 255, 255, 0.5);
            left: 0;
            transition: transform 0.3s ease-in-out;
        }

        .flip-card::before {
            top: 0;
            border-bottom: 1px solid rgba(0, 0, 0, 0.1);
            transform-origin: bottom;
        }

        .flip-card::after {
            bottom: 0;
            border-top: 1px solid rgba(0, 0, 0, 0.1);
            transform-origin: top;
        }

        .flip-card.flip::before {
            transform: rotateX(90deg);
        }

        .flip-card.flip::after {
            transform: rotateX(-90deg);
        }
    </style>
</head>
<body>
    <div class="clock">
        <div class="flip-card" id="hours">00</div>
        <div class="flip-card" id="minutes">00</div>
    </div>

    <script>
        function updateClock() {
            const now = new Date();
            let hours = String(now.getHours()).padStart(2, '0');
            let minutes = String(now.getMinutes()).padStart(2, '0');
            
            updateFlip(document.getElementById("hours"), hours);
            updateFlip(document.getElementById("minutes"), minutes);
        }

        function updateFlip(element, newValue) {
            if (element.textContent !== newValue) {
                element.classList.add("flip");
                setTimeout(() => {
                    element.textContent = newValue;
                    element.classList.remove("flip");
                }, 300);
            }
        }
        
        setInterval(updateClock, 1000);
        updateClock();
    </script>
</body>
</html>
